mkdir migrations
mkdir migrations/scripts
touch migrations/config.js
touch migrations/migrate.js
touch migrations/scripts/001_create_users_table.js 

# Initialize Node.js project
npm init -y

# Install required dependency
npm install mysql2 dotenv 

# First run creates tables
node migrations/migrate.js

# Then this will drop the tables
node migrations/migrate.js down 

# Add the seed data
node migrations/migrate.js

# Remove the seed data
node migrations/migrate.js down 

touch .env
touch .env.example 